{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "test/**/*.ts",
        "client/**/*.ts"
    ]
}